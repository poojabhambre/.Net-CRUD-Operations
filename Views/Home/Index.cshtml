@model List<Book.Models.BookStore>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bookstore Table</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f9;
        }

        .container {
            max-width: 900px;
            margin: 40px auto;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        h1 {
            text-align: center;
            color: #333;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

            table th, table td {
                text-align: left;
                padding: 12px;
                border: 1px solid #ddd;
            }

            table th {
                background-color: #007bff;
                color: white;
            }

            table tr:nth-child(even) {
                background-color: #f9f9f9;
            }

            table tr:hover {
                background-color: #f1f1f1;
            }

        .btn {
            padding: 6px 10px;
            border: none;
            border-radius: 5px;
            font-size: 14px;
            cursor: pointer;
            margin-right: 5px;
            text-align: center;
        }

        .btn-edit {
            background-color: #28a745;
            color: white;
        }

            .btn-edit:hover {
                background-color: #218838;
            }

        .btn-delete {
            background-color: #dc3545;
            color: white;
        }

            .btn-delete:hover {
                background-color: #b02a37;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Bookstore Inventory</h1>
        <br />
        <a href="/Home/AddBook/">Add New Book Here!</a>
        <!-- Table -->
        <table>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Price</th>
                    <th>Author</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Btitle</td>
                            <td>@item.Bauthor</td>
                            <td>@item.Bprice</td>
                            <td>@item.Bauthor</td>
                            <td>
                                <a href="/Home/EditBook/@item.Bid">Edit Book</a> | 
                                <a href="/Home/DeleteBook/@item.Bid">Delete Book</a>
                            </td>
                        </tr>
                    }

                }

                <!-- Add more rows dynamically -->
            </tbody>
        </table>
    </div>
</body>
</html>


